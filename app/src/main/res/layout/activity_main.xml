<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:background="@color/colorPrimary"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.youngtr.numberprogressbar.example.MainActivity">

    <com.youngtr.numberprogressbar.NumberProgressBar
        android:id="@+id/progress_horizontal_red"
        style="@style/NumberProgressBar.Horizontal.Red"
        android:layout_marginTop="20dp" />

    <com.youngtr.numberprogressbar.NumberProgressBar
        android:id="@+id/progress_horizontal_blue"
        style="@style/NumberProgressBar.Horizontal.Blue"
        android:layout_marginTop="20dp" />

    <com.youngtr.numberprogressbar.NumberProgressBar
        android:id="@+id/progress_horizontal_yellow"
        style="@style/NumberProgressBar.Horizontal.Yellow"
        android:layout_marginTop="20dp"
        app:numberTextVisibility="invisible" />

    <com.youngtr.numberprogressbar.NumberProgressBar
        android:id="@+id/progress_circle_blue"
        style="@style/NumberProgressBar.Circle.Blue"
        android:layout_marginTop="20dp"
        app:numberTextVisibility="invisible" />

    <com.youngtr.numberprogressbar.NumberProgressBar
        android:id="@+id/progress_circle_red"
        style="@style/NumberProgressBar.Circle.Red"
        android:layout_marginTop="20dp" />

    <com.youngtr.numberprogressbar.NumberProgressBar
        android:id="@+id/progress_circle_yellow"
        style="@style/NumberProgressBar.Circle.Yellow"
        app:numberTextSize="13sp"
        android:layout_marginTop="20dp" />

</LinearLayout>
